<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="?android:attr/colorBackground">

    <!-- Título principal -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_Resumen"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal" />

    <!-- Comida -->
    <TextView
        android:id="@+id/tvComida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_comida"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="12dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <!-- Extras -->
    <TextView
        android:id="@+id/tvExtras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_extras"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="32dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <!-- Botón Confirmar (destacado) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_Confirmar"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.Button.ElevatedButton"
        app:cornerRadius="16dp" />

    <!-- Botón Editar (secundario) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_Editar"
        android:textSize="16sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:cornerRadius="16dp" />

</LinearLayout>